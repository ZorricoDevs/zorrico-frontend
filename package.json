{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@mui/x-data-grid": "^8.7.0",
    "@reduxjs/toolkit": "^2.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^27.5.2",
    "@types/react-redux": "^7.1.33",
    "@types/react-router-dom": "^5.3.3",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.10.0",
    "framer-motion": "^12.23.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-intersection-observer": "^9.16.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "socket.io": "^4.8.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@eslint/js": "^9.12.0",
    "@playwright/test": "^1.54.1",
    "@tanstack/react-query": "^5.83.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/testing-library__react": "^10.0.1",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^4.9.5",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:optimized": "craco start",
    "start:fast": "DISABLE_ESLINT_PLUGIN=true GENERATE_SOURCEMAP=false react-scripts start",
    "start:local": "REACT_APP_ENV=development react-scripts start",
    "start:live": "cp .env.local .env && react-scripts start",
    "start:prod": "cp .env.production .env && react-scripts start",
    "build": "craco build",
    "build:vercel": "craco build && node scripts/post-build.js || craco build",
    "build:clean": "rm -rf build && npm run build",
    "build:deploy": "npm run build:clean && echo 'Build completed with cache busting enabled'",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "analyze": "DISABLE_ESLINT_PLUGIN=true npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "prepare": "husky install",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "postinstall": "husky install",
    "docker:build": "docker build -t homeloanmittra-frontend .",
    "docker:run": "docker run -p 3000:80 homeloanmittra-frontend",
    "startup:build": "npm run build && echo 'Frontend ready for deployment!'",
    "serve": "npx serve -s build -l 3000",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "env:info": "node -e \"console.log('Environment Info:'); console.log('API URL:', process.env.REACT_APP_API_URL || 'Not set'); console.log('ENV:', process.env.REACT_APP_ENV || 'Not set');\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
